#!/usr/bin/env node

var argv = require('optimist');


//define

argv
.usage('Usage: cebelca-cli -h [apikey] -u [username] -p [password] COMMAND')
.demand('h')
  .alias('h', 'apikey')
  .describe('h', 'Specify your api key')
.demand('u')
  .alias('u', 'username')
  .describe('u', 'Your Wordpress login')
.demand('p')
  .alias('p', 'password')
  .describe('p', 'Your Wordpress password')
.describe("save", "Save login information for future reference")
.argv;
